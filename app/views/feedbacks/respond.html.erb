<%= render partial: 'form_errors', locals: { what: @feedback } %>

<h3>Respond to feedback</h3>

<div class="row">
<div class="col-md-6">

<%= form_for(@feedback, method: 'post', url: { action: 'save_response' }) do |f| %>
  <div class="form-group">
    <%= f.label :response %>
    <%= f.text_area :response, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit 'Submit response', class: 'btn btn-primary' %>
  </div>
<% end %>

</div>
</div>
