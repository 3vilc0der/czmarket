<h3>PGP Two factor authentication required</h3>

<% if @gpg_msg != nil %>

<p>
To copy, click text box and press
<kbd>ctrl a</kbd>
<kbd>ctrl c</kbd>
</p>
<p>
<textarea readonly rows="12" class="form-control pgp-textarea">
<%= @gpg_msg %>
</textarea>
</p>

<%= form_tag(sessions_pgp_2fa_path, method: 'post', class: 'form-horizontal') do %>
  <div class="form-group">
    <%= label_tag :secret_word, "Decrypted word", class: 'col-sm-2 control-label' %>
    <div class="col-sm-7">
    <%= text_field_tag :secret_word, nil, class: 'form-control' %>
    </div>
  </div>

  <div class="form-group">
  <div class="col-sm-offset-2 col-sm-4">
    <%= submit_tag "Submit", id: 'submit', class: 'btn btn-primary' %>
  </div>
  </div>
<%end%>

<%end%>
